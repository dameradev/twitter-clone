<div class="columns" style="height:19rem" >
  <div class="column is-one-quarter profile-main is-clipped">
    <div style="height:100%"><%= image_tag("profile.jpg") %></div>
  </div>
  <div class="column is-three-thirds profile-main">
    <article class="tile is-child notification"  style="height:100%">
      <p class="title"><%= @user.name %></p>
      <p class="subtitle">Aligned with the right tile</p>
      <div class="content columns">
        <div class="column is-one-quarter" >
          <p class="heading">Tweets</p>
          <p class="title"><%= @user.tweets.count %></p>
          <p class="heading">Following</p>
          <p class="title"><%= @user.follow_count %></p>
        </div>
        <div class="column is-one-quarter">
          <p class="heading">Followers</p>
          <p class="title"><%= @user.followers_count %></p>
          <p class="heading">Likes</p>
          <p class="title"><%= @user.find_liked_items.size %></p>
        </div>
        <div class="content">
          <% if current_user.following?(@user)%>
            <%= link_to "Following", unfollow_user_path(@user), class: "button is-danger" %>
          <% elsif (@current_user != @user) %>
            <%= link_to "Follow", follow_user_path(@user), class: "button is-success" %>
          <% elsif (@current_user == @user) %>
            <%= link_to "Edit Account", edit_user_registration_path(current_user), class: "button is-info" %>
          <% end %>
        </div>
      </div>
    </article>
  </div>
</div>
