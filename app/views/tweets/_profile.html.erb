<div class="column is-one-quarter is-clearfix  profile-panel">

	<nav class="panel">
		<p class="panel-heading">Profile</p>
		<%= link_to user_path(current_user) do %>
			<div class="panel-block">
				<article class="media">
					<div class="media-left">
						<figure class="image is-64x64">
							<%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
						</figure>
					</div>
					<div class="media-content">
						<div class="content">
							<p>
								<strong><%= current_user.name %></strong><br />
								<small><%= current_user.username %></small>
							</p>
						</div>
					</div>
				</article>
			</div>
		<% end %>
		<div class="panel-block">
			<div class="level is-mobile is-clipped">
				<div class="level-item">
					<div>
						<p class="heading">Tweets</p>
						<p class="title is-6"><%= current_user.tweets.count %></p>
					</div>
				</div>
				<div class="level-item">
					<div>
						<p class="heading">Following</p>
						<p class="title is-6"><%= current_user.follow_count %></p>
					</div>
				</div>
					<div class="level-item">
					<div>
						<p class="heading">Followers</p>
						<p class="title is-6"><%= current_user.followers_count %></p>
					</div>
				</div>
			</div>
		</div>
	</nav>

</div>
